<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
			 xmlns:i="http://www.springframework.org/schema/integration"
			 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			 xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
       ">
	<!-- this is where the meal gets prepared -->

	<bean id="cook" class="nl.xebia.si.university.kitchen.Cook"/>

	<i:service-activator id="meal-prep" input-channel="products" output-channel="meals" ref="cook" method="prepareMeal"/>
</beans>